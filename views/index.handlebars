<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
    <div class="container">
        <a id="scraping" class="navbar-brand">Scrape New Articles!</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        Menu
        <i class="fa fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/saved">Saved Articles</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Page Header -->
<header class="masthead" style="background-image: url('/img/newsroom_bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 mx-auto">
                <div class="site-heading">
                    <h1>Austin News Scraper</h1>
                    <span class="subheading">
                        <img src="/img/kxan-olympics-web.png">
                    </span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<div class="container">
    {{#if hasArticles}}
        {{#each articles}}
            <div class="row">
                <div class="col-lg-2 mx-auto">
                    <img src="{{this.img}}" width="100%">
                </div>
                <div class="col-lg-8 mx-auto">
                    <a href="{{this.link}}" target="_blank">
                        <h2 class="post-title mystyle-h2">
                            {{this.title}}
                        </h2>
                    </a>
                    <p class="mystyle-p">
                        {{this.summary}}
                    </p>
                </div>
                <div class="col-lg-2 mx-auto">
                    <button class="btn btn-primary float-right btn-saved" data-id="{{this._id}}">SAVE ARTICLE</button>
                </div>
            </div>
            <hr>
        {{/each}}
    {{else}}
        <div class="row">
            <div class="col-lg-12 mx-auto empty-col">
                <h2 class="post-title mystyle-h2">
                    Uh Oh. Looks like we don't have any new articles.
                </h2>
            </div>
        </div>
        <hr>
    {{/if}}
</div>

