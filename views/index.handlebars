<!-- Modal -->
<div class="modal fade" id="resultModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <strong class="modal-title">Scraping Result</strong>
                <button type="button" class="close modalClose">&times;</button>
                {{!-- <button type="button" class="close" data-dismiss="modal">&times;</button> --}}
            </div>
            <div id="modalText" class="modal-body"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default modalClose">Close</button>
